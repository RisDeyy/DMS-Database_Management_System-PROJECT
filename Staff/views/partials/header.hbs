<header class="header">
  <div class="header__top">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="header__top__left">
            <ul>
              <li><i class="fa fa-envelope"></i>support@appbooking.com.vn</li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-md-6">
          <div class="header__top__right align-right">
            <div class="header__top__right__auth align-right">
              {{#if user}}
              <div style="font-size: 14px;">
                <i class="fas fa-user-check"></i>
                Hello
                {{user.name}}
              </div>
              <a href="/myaccount">
                <i class="fa fa-user" style="margin-left: 10px;"></i>
                Tài Khoản</a>
              <a href="/logout">
                <i class="fas fa-sign-out-alt" style="margin-left: 10px;"></i>
                Đăng Xuất</a>
              {{else}}
              <a href="/login">
                <i class="fas fa-sign-in-alt" style="margin-left: 10px;"></i>
                Đăng nhập</a>
              <a href="/register"><i class="fa fa-user-plus" style="margin-left: 10px;"></i>
                Đăng ký</a>
              {{/if}}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="header__logo">
          <a href="/"><img src="/img/logo.png" alt="" /></a>  {{!--Ảnh logo--}}
        </div>
      </div>
      <div class="col-lg-6 col-md-12">
        <nav class="header__menu">
          <ul>
            <li class="{{#if home}}active{{/if}}"><a href="/home">Trang chủ</a></li>
            <li class="{{#if booking}}active{{/if}}"><a href="/search-for-appointment">Đặt lịch</a></li>
            <li class="{{#if blog}}active{{/if}}"><a href="/blogs">Blogs</a></li>
            <li class="{{#if contact}}active{{/if}}"><a href="/contact">Liên hệ</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>