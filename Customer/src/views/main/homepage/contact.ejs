                            <div class="col-5">
                                <label for="contactPhone">Số điện thoại</label>
                                <input class="form-control" name="contactPhone" id="contactPhone" type="text"
                                       placeholder="Số điện thoại...">
                            </div>
                            <div class="col-7">
                                <label for="contactCompany">Tên cơ sở y tế</label>
                                <input class="form-control" name="contactCompany" id="contactCompany" type="text"
                                       placeholder="Bệnh viện, phòng khám...">
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <label for="contactAddress">Địa chỉ</label>
                            <input class="form-control" name="contactName" id="contactName" type="text"
                                   placeholder="Address">
                        </div>
                        <div class="form-group mt-2">
                            <label for="contactContent">Nội dung</label>
                            <textarea class="form-control" name="contactContent" id="contactContent"
                                      type="text"></textarea>
                        </div>
                        <div class="mb-4">
                            <button type="button" class="btn btn-primary" id="sendContact">Gửi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
